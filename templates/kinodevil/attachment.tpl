[allow-download]
<div class="attach clearfix ignore-select">
	<a href="{link}" class="download-link"><i class="fa fa-download"></i> {name}</a> 
    [count]<span class="attach-info"> [{size}] (cкачиваний: {count})</span>[/count]
</div>
[/allow-download]
[allow-online]<br />Посмотреть онлайн файл: <a href="{online-view-link}" target="_blank">{name}</a>[/allow-online]
[not-allow-download]<div class="attach">У вас нет доступа к скачиванию файлов с нашего сервера</div>[/not-allow-download]